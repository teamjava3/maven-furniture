<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="team.furniture.oa.client.sales.dao.ISalesLabelDao">
	
	<resultMap type="SalesLabel" id="salesLabelMap">
		<id column="sid" property="sid"/>
		<result column="sname" property="sname"/>
		<result column="client" property="client"/>
			<result column="money" property="money"/>
				<result column="ways" property="ways"/>
					<result column="stime" property="stime"/>
					
	</resultMap>
	
	
	<select id="selectAllRows" resultType="long">
		select count(sid) from sales
		
	</select>
	
	<select id="selectCurrentPgaeSalesLabels" resultMap="salesLabelMap">
		select sid,sname,client,money,ways,stime
		from sales
	</select>
	
		<delete id="deleteById">
		delete from sales where sid=#{sid}
	</delete>
	
	<update id="updateNewsLabel">
		update sales
		set sname=#{sname},client=#{client},money=#{money},ways=#{ways},stime=#{stime}
		where sid=#{sid}
	</update>
	
	<select id="selectNewsLabelById" resultMap="salesLabelMap">
		select sid,sname,client,money,ways,stime
		from sales
		where sid=#{sid}
	</select>
	
	<insert id="insertNewsLabel">
		insert into sales(sname,client,money,ways,stime)
		values( #{sname}, #{client},#{money},#{ways},#{stime})
	</insert>
	
	
	
	
</mapper>
